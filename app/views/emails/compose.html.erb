<div class="" style="display: flex; justify-content: center; align-items:center; height: 100%">
  <%= form_with scope: :data, html: {style:"width: 80%"}, url: '/emails/reply', local: true do |f| %>

  <div class="form-group row">
    <%= f.label :to, "To", for:"staticEmail", class:"col-sm-2 col-form-label" %><br>

    <div class="col-sm-10">
      <%= f.label :to, @to, class:"form-control-plaintext", id:"staticEmail" %>
    </div>

  </div>

  <div class="form-group row">
    <%= f.label :subject, "", class:"col-sm-2 col-form-label", for:"subjectInput" %>
    
    <div class="col-sm-10">
      <%= f.text_field :subject, class:"form-control", id:"subjectInput" %>
    </div>

  </div>

  <div class="form-group row">
    <%= f.label :body, "Body", for: "exampleFormControlTextarea1" %>
    <%= f.text_area :body, class:"form-control", id:"exampleFormControlTextarea1", rows: "10" %>
  </div>


  <%= f.submit "Send", type:"submit", class:"btn btn-primary" %>

  <% end %>
</div>