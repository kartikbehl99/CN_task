<div style="width: 100%; height: 100%; display: flex; flex-direction: column; align-items:center; justify-content: center">
    <div class="header">
        <h3>Sign Up</h3>
    </div>

    <div class="signup" style="display:flex; justify-content: center; align-items:center">
        <%= form_with scope: :user, url: '/signup/create', local: true do |f| %>
            
            <div class="form-group">
                <%= f.label :username, "Username", for:"exampleInputEmail1" %><br>
                <%= f.text_field :username, class:"form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password, "Password", for:"exampleInputPassword1" %><br>
                <%= f.password_field :password, class:"form-control" %><br>
            </div>
            
            <div class="form-group form-check">
                <%= f.check_box :admin, type:"checkbox", class:"form-check-input", id:"exampleCheck1" %><br>
                <%= f.label :admin, "Admin", class:"form-check-label", for:"exampleCheck1" %><br>
            </div>
            
            <%= f.submit "Sign Up", type:"submit", class:"btn btn-primary" %>

        <% end %>
    </div>
</div>